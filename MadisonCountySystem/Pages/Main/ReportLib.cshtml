@page
@model MadisonCountySystem.Pages.Main.ReportLibModel
@{
    ViewData["Title"] = "Report Library";
}

<style type="text/css">
    thead {
        background-color: #EFC935;
    }
</style>

<br />
<h3 style="text-align: center; font-weight: bold; color: #293A80; font-size: 30px; font-family: 'Open Sans', sans-serif; letter-spacing: 2px; ">Report Library</h3>
<p style="text-align: center; color: #293A80; font-size: 15px; font-family: 'Open Sans', sans-serif;">This is a shared knowledge management system to easily access information.</p>
<br/>
<div style="text-align: center;  font-family: 'Open Sans', sans-serif;">
    <table class="table table-bordered table-responsive table-hover" style="margin: auto;">
        <thead>
        <tr>
            <th>Report Key Item</th>
            <th>Collaboration Name</th>
            <th>Report Key Type</th>
            <th>Date Created</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var report in Model.CollabReports2)
            {
                <tr>
                    <td><a asp-area="" asp-page="/Info/ReportInfo" asp-route-reportID="@report.CollabReportID">@report.KeyName</a></td>
                    <td>@report.CollabName</td>
                    <td>@report.KeyType</td>
                    <td>@report.ReportCreatedDate</td>
                </tr>
            }
        }
    </tbody>
</table>
</div>


