@page
@model MadisonCountySystem.Pages.Main.KnowledgeLibModel
@{
    ViewData["Title"] = "Knowledge Item Library";
}

<style type="text/css">
    thead {
        background-color: #EFC935;
    }
</style>
<br/>
<h2>Knowledge Item Management</h2>

<form method="post">
    <div class="row align-items-end">
        <div class="col">
            <label for="activeKnowledgeItems" class="form-label">Select a Knowledge Item:</label>
            <select class="form-control" id="activeKnowledgeItems" name="selectedKnowledgeItem">
                @foreach (var KnowledgeItem in Model.KnowledgeItemList)
                {
                    <option value="@KnowledgeItem.KnowledgeID"> @KnowledgeItem.KnowledgeTitle</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <button asp-page="KnowledgeLib" asp-page-handler="AddCollab" class="btn btn-outline-success">Add to Collaboration</button>
        </div>
        <div class="col-auto">
            <button asp-page="KnowledgeLib" asp-page-handler="CreateKnowledgeItem" class="btn btn-outline-primary">Create New Knowledge Item</button>
        </div>
    </div>
</form>

<br />
<form method="post">
    <div class="row align-items-end">
        <div class="col">
            <input asp-for="Search" placeholder="Search Knowledge Item Name, Owner Username..." class="form-control" />
            <span asp-validation-for="Search" class="text-danger"></span>
        </div>
        <div class="col-auto">
            <button asp-page="KnowledgeLib" asp-page-handler="NarrowSearch" class="btn btn-outline-success">Search</button>
        </div>
    </div>
</form>

<br />

<h3>Knowledge Item Library</h3>

<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Knowlege Item Name:</th>
            <th>Knowlege Item Subject:</th>
            <th>Knowlege Item Category:</th>
            <th>Date Created:</th>
            <th>Owner:</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var KnowledgeItem in Model.KnowledgeItemList)
            {
                <tr>
                    <td><a asp-area="" asp-page="/Info/KnowledgeInfo" asp-route-kiID="@KnowledgeItem.KnowledgeID">@KnowledgeItem.KnowledgeTitle</a></td>
                    <td>@KnowledgeItem.KnowledgeSubject</td>
                    <td>@KnowledgeItem.KnowledgeCategory</td>
                    <td>@KnowledgeItem.KnowledgePostDate</td>
                    <td>@KnowledgeItem.OwnerName</td>
                    <td>
                        <!-- New column for actions -->
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Main/KnowledgeLib" asp-route-actionType="Edit:@KnowledgeItem.KnowledgeID">Edit</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/ButtonCollab/KnowledgeButton" asp-route-itemID="@KnowledgeItem.KnowledgeID">Collaborate</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Main/KnowledgeLib" asp-route-actionType="Delete:@KnowledgeItem.KnowledgeID">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
