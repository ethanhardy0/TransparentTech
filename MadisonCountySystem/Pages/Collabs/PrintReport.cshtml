@page
@model MadisonCountySystem.Pages.Collabs.PrintReportModel
@{
    ViewData["Title"] = Model.CollabName + " Report";
}
<div class="container mt-5">
    <h1 class="text-center mb-4">@Model.CollabName Report</h1>
    <h2 class="text-center mb-4">Analysis Type: <span class="fw-normal">@Model.dataType</span></h2>
    <h5 class="text-center mb-4">Date: <span class="fw-normal">@DateTime.Now.ToString()</span></h5>
    <hr />
</div>
<br/>

@if (Model.dataType == "Plan")
{
    <h2 class="text-center mb-4">@Model.PlanName Plan</h2>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <th style="background-color: #e3f2fd;">Step:</th>
                <th style="background-color: #e3f2fd;">Step Data:</th>
                <th style="background-color: #e3f2fd;">Due Date:</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var step in Model.PlanSteps)
                {
                    <tr>
                        <td>@step.PlanStepName</td>
                        <td>@step.StepData</td>
                        <td>@step.DueDate</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    foreach (var KnowledgeItem in Model.KeyStandard)
    {
        <div class="text-center mb-4">
            <h2> @KnowledgeItem.KnowledgeTitle</h2>
            <h3><strong>Subject:</strong> <span class="fw-normal">@KnowledgeItem.KnowledgeSubject</span></h3>
            <h4><strong>Category:</strong> <span class="fw-normal">@KnowledgeItem.KnowledgeCategory</span></h4>
        </div>

    }
    
    foreach (var SWOT in Model.KeySWOT)
    {
        <div class="text-center mb-4">
            <h2> @SWOT.KnowledgeTitle</h2>
            <h3><strong>Subject:</strong> <span class="fw-normal">@SWOT.KnowledgeSubject</span></h3>
            <h4><strong>Category:</strong> <span class="fw-normal">@SWOT.KnowledgeCategory</span></h4>
        </div>

        
        <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Strengths</h5>
                        <p class="card-text">@SWOT.Strengths</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Weaknesses</h5>
                        <p class="card-text">@SWOT.Weaknesses</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Opportunities</h5>
                        <p class="card-text">@SWOT.Opportunities</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Threats</h5>
                        <p class="card-text">@SWOT.Threats</p>
                    </div>
                </div>
            </div>

        </div>
    }

    foreach (var PEST in Model.KeyPEST)
    {
        <div class="text-center mb-4">
            <h2> @PEST.KnowledgeTitle</h2>
            <h3><strong>Subject:</strong> <span class="fw-normal">@PEST.KnowledgeSubject</span></h3>
            <h4><strong>Category:</strong> <span class="fw-normal">@PEST.KnowledgeCategory</span></h4>
        </div>


        <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Political</h5>
                        <p class="card-text">@PEST.Political</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Economic</h5>
                        <p class="card-text">@PEST.Economic</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Social</h5>
                        <p class="card-text">@PEST.Social</p>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Threats</h5>
                        <p class="card-text">@PEST.Technological</p>
                    </div>
                </div>
            </div>

        </div>
    }
}
<br/>
